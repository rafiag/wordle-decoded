# =============================================================================
# Production Environment Variables for Railway Deployment
# =============================================================================
# Copy these to Railway environment variables dashboard
# DO NOT commit actual .env.production with secrets!

# -----------------------------------------------------------------------------
# Database Configuration (Railway PostgreSQL)
# -----------------------------------------------------------------------------
# Railway will auto-inject DATABASE_URL - no manual configuration needed
# Format: postgresql://user:password@host:port/database

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
ENV=production
API_HOST=0.0.0.0
# Railway will inject PORT automatically
API_RELOAD=false
DEBUG=false

# -----------------------------------------------------------------------------
# CORS Configuration (GitHub Pages)
# -----------------------------------------------------------------------------
# Update with your actual GitHub Pages URL
CORS_ORIGINS=https://yourusername.github.io

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-here

# -----------------------------------------------------------------------------
# Data Pipeline Configuration
# -----------------------------------------------------------------------------
DATA_DIR=/app/data
RAW_DATA_DIR=/app/data/raw
PROCESSED_DATA_DIR=/app/data/processed
CACHE_DIR=/app/data/cache
ETL_BATCH_SIZE=1000
ETL_VERBOSE=false
FRUSTRATION_THRESHOLD=-0.2
MIN_GAME_ID=1
MAX_GAME_ID=2000
WORDLE_START_DATE=2021-06-19

# -----------------------------------------------------------------------------
# NLTK Configuration
# -----------------------------------------------------------------------------
NLTK_DATA_PATH=/app/data/nltk_data

# -----------------------------------------------------------------------------
# External API Credentials
# -----------------------------------------------------------------------------
# Kaggle credentials (needed for initial data load)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/wordle.log

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
API_RATE_LIMIT=100
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TRAP_ANALYSIS=true

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------
KAGGLE_WORDLE_GAMES_DATASET=scarcalvetsis/wordle-games
KAGGLE_WORDLE_TWEETS_DATASET=benhamner/wordle-tweets
NYT_ACQUISITION_DATE=2022-02-10
