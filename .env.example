# =============================================================================
# Wordle Data Explorer - Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# DATABASE_URL: If empty, the application falls back to SQLite (recommended for Dev).
# To use PostgreSQL (Production-like), uncomment the lines below or set DATABASE_URL.
DATABASE_URL=
# DATABASE_URL=postgresql://postgres:postgres@db:5432/wordle

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wordle

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
ENV=development
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=true

# -----------------------------------------------------------------------------
# External API Credentials
# -----------------------------------------------------------------------------
# Get your Kaggle API token from: https://www.kaggle.com/settings/account
KAGGLE_API_TOKEN=your_kaggle_token_here

# GitHub token (optional, only needed for GitHub integrations)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# -----------------------------------------------------------------------------
# Google Trends Configuration
# -----------------------------------------------------------------------------
GOOGLE_TRENDS_RATE_LIMIT=50
GOOGLE_TRENDS_CACHE_DURATION=604800

# -----------------------------------------------------------------------------
# Data Pipeline Configuration
# -----------------------------------------------------------------------------
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
CACHE_DIR=./data/cache
ETL_BATCH_SIZE=1000
ETL_VERBOSE=true
FRUSTRATION_THRESHOLD=-0.2
MIN_GAME_ID=1
MAX_GAME_ID=2000
WORDLE_START_DATE=2021-06-19

# -----------------------------------------------------------------------------
# NLTK Configuration
# -----------------------------------------------------------------------------
NLTK_DATA_PATH=./data/nltk_data

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/wordle.log

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
API_RATE_LIMIT=100
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=300

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
TEST_DATABASE_URL=sqlite:///./data/test_wordle.db
TEST_MODE=false

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-key-in-production
TOKEN_EXPIRATION=3600

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TRAP_ANALYSIS=true

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------
KAGGLE_WORDLE_GAMES_DATASET=scarcalvetsis/wordle-games
KAGGLE_WORDLE_TWEETS_DATASET=benhamner/wordle-tweets
NYT_ACQUISITION_DATE=2022-02-10

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
ENABLE_ANALYTICS=false
